<%- include("partials/header") -%>

    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="mb-3">
            <label>Title</label><br>
            <input class="form-control" name="postTitle" type="text"></input>
        </div>
        <div class="mb-3">
            <label>Post</label>
            <textarea class="form-control" name="postBody" cols="30" rows="5"></textarea>
        </div>
        <button type="submit" name="postButton" class="btn btn-primary">Publish</button>
    </form>

    <%- include("partials/footer") -%>